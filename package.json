{
  "name": "onchain-paykit",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "contracts",
    "apps/*"
  ],
  "packageManager": "pnpm@9.7.0",
  "scripts": {
    "build": "pnpm -r run build",
    "dev": "pnpm -r --parallel run dev",
    "lint": "pnpm -r run lint",
    "typecheck": "pnpm -r run typecheck",
    "test": "pnpm -r run test",
    "format": "pnpm -r run format",
    "contracts:build": "pnpm --filter contracts build",
    "contracts:test": "pnpm --filter contracts test",
    "api:dev": "pnpm --filter @paykit/api dev",
    "dashboard:dev": "pnpm --filter @paykit/dashboard dev",
    "widget:dev": "pnpm --filter @paykit/widget dev"
  }
} 